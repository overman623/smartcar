<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.stationsinfo">
 
  <select id="count" resultType="integer">
  SELECT count(*) from stationsinfo
  </select>
 
	<select id="selectAll" resultType="dto.StationsInfoDTO">
  SELECT sn, staddress, stlat, stlng, stprice, stphoto, stname, stregistnum, stphone, inserttime, updatetime, userid
  from stationsinfo order by orderlist limit 0,10
	</select>
  
    <select id="StationsInfoFromFirstIndexToLastIndex" parameterType="map" resultType="dto.StationsInfoDTO">
 
  SELECT sn, staddress, stlat, stlng, stprice, stphoto, stname, stregistnum, stphone, inserttime, updatetime, userid
  from stationsinfo order by orderlist limit #{firstIndex}, #{offset} 
  </select>

